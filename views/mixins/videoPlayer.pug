mixin videoPlayer(video = {})
    .videoPlayer__wrapper
        .videoPlayer#jsVideoPlayer
            video(src=`${video.src}`)
            .videoPlayer__controls
                .videoPlayer__column.left
                    input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")
                    span#jsVolumeButton
                        i.fas.fa-volume-up
                    span
                        span#currentTime 00:00:00
                        |  / 
                        span#totalTime 00:00:00
                .videoPlayer__column.center
                    span#jsPlayButton
                        i.fas.fa-play
                .videoPlayer__column.right
                    span#jsFullScreen
                        i.fas.fa-expand