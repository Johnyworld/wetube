extends layouts/main
include mixins/videoBlock

block content
    .l-wrapper
        .user-profile
            .user-profile__header
                img.avatar(src=`/${user.avatarUrl}`)
                h4.profile__username=user.name
            if loggedUser && user.id === loggedUser.id
                .user-profile__btn
                    a.btn.user-profile__edit-profile(href=`/users${routes.editProfile}`) ðŸ–Š Edit Profile
                .user-profile__btn
                    a.btn.user-profile__change-password(href=`/users${routes.changePassword}`) ðŸ”’ Change Password
            .user-videos
                each item in user.videos
                    +videoBlock({
                        id:item.id,
                        title:item.title,
                        views:item.views,
                        fileUrl:item.fileUrl
                    })